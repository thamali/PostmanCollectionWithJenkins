		{
			"name": "4-GetBookingByID",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"//assignment:",
							"// call the post api to create a booking using the script:",
							"// and fetch the booking id and sore in a variable.",
							"",
							"pm.sendRequest({",
							"    method: 'POST',",
							"    url: pm.environment.get(\"baseURL\") + '/booking',",
							"    header: {",
							"        'Content-Type': 'application/json',",
							"        'Authorization': 'Bearer ' + pm.variables.get(\"new_token_id\")",
							"    },",
							"    body: {",
							"        mode: 'raw',",
							"        // JavaScript object to JSON",
							"        raw: JSON.stringify({",
							"            \"firstname\": \"API1\",",
							"            \"lastname\": \"Batch1\",",
							"            \"totalprice\": 111,",
							"            \"depositpaid\": true,",
							"            \"bookingdates\": {",
							"                \"checkin\": \"2018-01-01\",",
							"                \"checkout\": \"2019-01-01\"",
							"            },",
							"            \"additionalneeds\": \"Breakfast\"",
							"        })",
							"    }",
							"}, function(error, response) {",
							"    if (error) {",
							"        console.log(error);",
							"    } else {",
							"        // JSON to JS Object",
							"        const responseBody = JSON.parse(response.text());",
							"        const bookingId = responseBody.bookingid;",
							"        console.log(\"New booking id: \" + bookingId);",
							"        pm.variables.set(\"new_booking_id\", bookingId);",
							"    }",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
